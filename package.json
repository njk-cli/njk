{
  "name": "njk",
  "version": "4.0.2",
  "description": "CLI tool to render nunjucks with markdown and front-matter",
  "type": "module",
  "exports": "./lib/main.js",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "bin": "./cli.js",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "repository": "mohitsinghs/njk",
  "keywords": [
    "cli",
    "nunjucks",
    "markdown",
    "front-matter",
    "html",
    "template",
    "templating",
    "render"
  ],
  "author": "Mohit Singh <mohit@mohitsingh.in> (https://mohitsingh.in/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mohitsinghs/njk/issues"
  },
  "homepage": "https://github.com/mohitsinghs/njk#readme",
  "dependencies": {
    "chalk": "^5.0.0",
    "chalk-template": "^0.2.0",
    "chokidar": "^3.5.2",
    "commander": "8.3.0",
    "data-dir": "^1.2.5",
    "front-matter": "^4.0.2",
    "fs-extra": "^10.0.0",
    "globby": "12.0.2",
    "html-minifier": "^4.0.0",
    "lodash.merge": "^4.6.2",
    "log-symbols": "5.1.0",
    "marked": "^4.0.7",
    "nunjucks": "^3.2.3",
    "prefer-local": "^1.0.5"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "ansi-styles": "^6.1.0",
    "jest": "^27.4.4",
    "supports-color": "^9.2.1"
  },
  "jest": {
    "transform": {},
    "verbose": true,
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/*.js"
    ],
    "moduleNameMapper": {
      "#ansi-styles": "ansi-styles",
      "#supports-color": "supports-color"
    }
  }
}
