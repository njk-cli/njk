{
  "name": "njk",
  "version": "6.0.0",
  "description": "CLI tool to render nunjucks with markdown and front-matter",
  "type": "module",
  "exports": "./lib/main.js",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "bin": "./cli.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": "mohitsinghs/njk",
  "keywords": [
    "cli",
    "nunjucks",
    "markdown",
    "front-matter",
    "html",
    "template",
    "templating",
    "render"
  ],
  "author": "Mohit Singh <mohit@mohitsingh.in> (https://mohitsingh.in/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mohitsinghs/njk/issues"
  },
  "homepage": "https://github.com/mohitsinghs/njk#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "chalk-template": "^1.1.0",
    "chokidar": "^3.5.3",
    "commander": "^11.0.0",
    "data-dir": "^1.2.6",
    "fs-extra": "^11.1.1",
    "globby": "^13.2.1",
    "gray-matter": "^4.0.3",
    "html-minifier": "^4.0.0",
    "lodash.merge": "^4.6.2",
    "log-symbols": "5.1.0",
    "marked": "^5.1.0",
    "marked-gfm-heading-id": "^3.0.4",
    "marked-mangle": "^1.1.0",
    "nunjucks": "^3.2.4",
    "prefer-local": "^1.0.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.3",
    "ansi-styles": "^6.2.1",
    "jest": "^29.5.0",
    "supports-color": "^9.4.0"
  },
  "jest": {
    "transform": {},
    "verbose": true,
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/*.js"
    ],
    "moduleNameMapper": {
      "#ansi-styles": "ansi-styles",
      "#supports-color": "supports-color"
    }
  }
}
